<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Atrativos Turísticos"
             x:Class="SantoAngelo.View.AtrativosView">
    <ContentPage.Content>
        <Grid BackgroundColor="Black">
            <Image Source="turismo.jpg"
                       Opacity="0.2"
                       Aspect="Fill"/>
            
            <StackLayout>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition>
                            <ColumnDefinition.Width>
                                <OnPlatform x:TypeArguments="GridLength">
                                    <On Platform="UWP" Value="*"/>
                                    <On Platform="Android" Value="200"/>
                                </OnPlatform>
                            </ColumnDefinition.Width>                           
                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition>
                            <RowDefinition.Height>
                                <OnPlatform x:TypeArguments="GridLength">
                                    <On Platform="Android" Value="200"/>
                                    <On Platform="UWP" Value="250"/>
                                </OnPlatform>
                            </RowDefinition.Height>
                        </RowDefinition>
                    </Grid.RowDefinitions>
                    <!--Catedral Angelopolitana-->
                    <Image Source="catedralInicial.jpg"
                           Aspect="Fill"
                          Grid.Column="0"
                          Grid.Row="0"/>

                    <Label Text="Catedral Angelopolitana"
                           TextColor="White"
                           FontSize="20"
                           Grid.Column="0"
                           Grid.Row="0"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"/>

                    <Image Source="add.png"
                           HeightRequest="50"
                           VerticalOptions="End"
                           HorizontalOptions="End"
                           Grid.Column="0"
                           Grid.Row="0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="openCatedralView"/>
                        </Image.GestureRecognizers>
                    </Image>

                    <!--Museu Municipal-->
                    <Image Source="museumunicipal.jpg"
                           Aspect="Fill"
                           Grid.Column="1"
                           Grid.Row="0"/>

                    <Label Text="Museu Municipal"                           
                           TextColor="White"
                           FontSize="20"
                           Grid.Column="1"
                           Grid.Row="0"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"/>

                    <Image Source="add.png"
                           HeightRequest="50"
                           VerticalOptions="End"
                           HorizontalOptions="End"
                           Grid.Column="1"
                           Grid.Row="0"/>

                    <!--TO DO-->
                    <Image Source="catedralInicial.jpg"
                      Grid.Column="0"
                      Grid.Row="1"/>
                </Grid>
            </StackLayout>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>